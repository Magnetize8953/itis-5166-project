<%- include('../partials/header.ejs', { title: 'Edit Event - ColorStack UNC Charlotte', extraCSS: ['eventForm'] }) %>
<h1>Edit Event: <%= event.title %></h1>

<form class="connection-form" action="/events/<%= event.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

    <label class="grid1" for="title">Title</label>
    <input class="grid2" type="text" id="title" name="title" placeholder="Enter the title of the event" value="<%= event.title %>" required><br>

    <label class="grid1" for="category">Category</label>
    <input class="grid2" type="text" id="category" name="category" placeholder="Enter the category of the event" value="<%= event.category %>" required><br>

    <label class="grid1" for="description">Details</label>
    <textarea class="grid2" id="description" name="description" placeholder="Enter a short description of the event" required><%= event.description %></textarea><br>

    <label class="grid1" for="location">Location</label>
    <input class="grid2" type="text" id="location" name="location" placeholder="Enter the location of the event" value="<%= event.location %>" required><br>

    <label class="grid1" for="when">Date</label>
    <input class="grid2" type="date" id="when" name="when" placeholder="Enter when the event will be held" value="<%= event.startDateTime.toISOString().substring(0, event.startDateTime.toISOString().indexOf('T')) %>" required><br>

    <label class="grid1" for="start">Start Time</label>
    <input class="grid2" type="time" id="start" name="start" placeholder="Enter the starting time for the event" value="<%= event.startDateTime.toISOString().substring(event.startDateTime.toISOString().indexOf('T') + 1, event.startDateTime.toISOString().indexOf('Z')) %>" required><br>

    <label class="grid1" for="end">End Time</label>
    <input class="grid2" type="time" id="end" name="end" placeholder="Enter the ending time for the event" value="<%= event.endDateTime.toISOString().substring(event.endDateTime.toISOString().indexOf('T') + 1, event.endDateTime.toISOString().indexOf('Z')) %>" required><br>

    <label class="grid1" for="image">Image</label>
    <input class="grid2" type="file" id="image" name="image" placeholder="Upload an image for the event" value="<%= event.image %>"><br>

    <button type="submit">Create Event</button>

</form>
<%- include('../partials/footer.ejs') %>
